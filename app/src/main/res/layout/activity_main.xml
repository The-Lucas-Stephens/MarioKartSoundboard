<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mario Kart Wii Soundboard"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:id="@+id/theTitle"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/coconutMall"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/theTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        android:src="@drawable/coconutmall" />

    <ImageView
        android:id="@+id/rainbowRoad"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/coconutMall"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-35dp"
        android:src="@drawable/rainbowroad" />

    <ImageView
        android:id="@+id/mapleTreeway"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/rainbowRoad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-42dp"
        android:src="@drawable/mapletreeway" />
    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mapleTreeway"
        android:layout_centerHorizontal="true"
        android:text = "Next"

        />


</RelativeLayout>